<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/shoot">


    <TextView
        android:id="@+id/tv_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_progress"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="194dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode1"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_challenge"
        android:layout_alignLeft="@+id/tv_common"
        android:layout_marginBottom="42dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode2"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvmode3time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_challenge"
        android:layout_alignLeft="@+id/tvmode2time"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tvmode2time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_progress"
        android:layout_alignLeft="@+id/tvmode1time"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:textIsSelectable="false"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tv_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_progress"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="108dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode3"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_compete_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="123dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_compete_return"
        android:layout_marginRight="146dp"
        android:layout_toLeftOf="@+id/tv_compete_return"
        android:background="@drawable/set" />

    <TextView
        android:id="@+id/tvmode1time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_common"
        android:layout_alignRight="@+id/tv_compete_return"
        android:layout_marginRight="46dp"
        android:layout_toStartOf="@+id/tv_set"
        android:background="@drawable/show"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="#666666" />

</RelativeLayout>
