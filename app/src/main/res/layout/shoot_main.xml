<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/shoot">


    <TextView
        android:id="@+id/tv_common"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode1"
        android:textColor="@color/white"
        android:textSize="40sp"

        android:layout_marginBottom="50dp"
         />
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode2"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_below="@+id/tv_common"
        android:layout_alignStart="@+id/tv_common"
        android:layout_marginBottom="50dp"
    />

    <TextView
        android:id="@+id/tvmode3time"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv_challenge"
        android:layout_alignLeft="@+id/tvmode1time"
        android:layout_marginBottom="10dp"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvmode2time"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/tv_progress"
        android:layout_alignLeft="@id/tvmode1time"
        android:layout_marginBottom="10dp"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:textIsSelectable="false"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_challenge"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/tv_progress"
        android:layout_below="@+id/tv_progress"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode3"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/tv_compete_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:background="@drawable/back"
        android:layout_alignTop="@+id/tv_set"
        android:layout_toStartOf="@+id/tv_set" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/set"
        android:layout_alignBottom="@+id/tvmode3time"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:id="@+id/tvmode1time"
        android:layout_width="100dp"
        android:layout_height="60dp"

        android:background="@drawable/show"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="#FFFFFF"
        android:clickable="false"
        android:editable="false"
        android:layout_alignBottom="@+id/tv_common"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/tv_common"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitBrief"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/tv_common"
        android:lineSpacingExtra="9dp"

        android:layout_toRightOf="@id/tvmode1time"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:gravity="center_horizontal|left"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:layout_marginRight="50dp"
        android:layout_alignBottom="@+id/tvmode2time"
        android:layout_marginBottom="-50dp"
        android:padding="20dp"

        />



</RelativeLayout>
